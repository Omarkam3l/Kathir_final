    {
      "name": "Search Meals - With Price Filter",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/meals/search?query=seafood&max_price=100&limit=5",
          "host": ["{{base_url}}"],
          "path": ["meals", "search"],
          "query": [
            {
              "key": "query",
              "value": "seafood"
            },
            {
              "key": "max_price",
              "value": "100"
            },
            {
              "key": "limit",
              "value": "5"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('All results under max price', function () {",
              "    var jsonData = pm.response.json();",
              "    if (jsonData.results && jsonData.results.length > 0) {",
              "        jsonData.results.forEach(function(meal) {",
              "            pm.expect(meal.price).to.be.at.most(100);",
              "        });",
              "    }",
              "});"
            ]
          }
        }
      ]
