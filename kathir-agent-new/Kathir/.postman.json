    {
      "name": "Agent Chat - Search Request",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"Show me chicken dishes under 80 EGP\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/agent/chat",
          "host": ["{{base_url}}"],
          "path": ["agent", "chat"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has required fields', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('ok');",
              "    pm.expect(jsonData).to.have.property('response');",
              "    pm.expect(jsonData).to.have.property('session_id');",
              "});",
              "",
              "pm.test('Response is valid JSON', function () {",
              "    var jsonData = pm.response.json();",
              "    var agentResponse = JSON.parse(jsonData.response);",
              "    pm.expect(agentResponse).to.have.property('message');",
              "    pm.expect(agentResponse).to.have.property('data');",
              "    pm.expect(agentResponse).to.have.property('action');",
              "});",
              "",
              "pm.test('Agent response contains meals data', function () {",
              "    var jsonData = pm.response.json();",
              "    var agentResponse = JSON.parse(jsonData.response);",
              "    if (agentResponse.data && agentResponse.data.meals) {",
              "        pm.expect(agentResponse.data.meals).to.be.an('array');",
              "        if (agentResponse.data.meals.length > 0) {",
              "            pm.expect(agentResponse.data.meals[0]).to.have.property('image_url');",
              "        }",
              "    }",
              "});"
            ]
          }
        }
      ]
    },
