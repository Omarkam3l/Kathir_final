  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has ok field', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('ok');",
              "    pm.expect(jsonData.ok).to.be.true;",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Search Meals - Basic",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/meals/search?query=chicken&limit=5",
          "host": ["{{base_url}}"],
          "path": ["meals", "search"],
          "query": [
            {
              "key": "query",
              "value": "chicken"
            },
            {
              "key": "limit",
              "value": "5"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has required fields', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('ok');",
              "    pm.expect(jsonData).to.have.property('results');",
              "    pm.expect(jsonData).to.have.property('count');",
              "});",
              "",
              "pm.test('Results contain image_url field', function () {",
              "    var jsonData = pm.response.json();",
              "    if (jsonData.results && jsonData.results.length > 0) {",
              "        pm.expect(jsonData.results[0]).to.have.property('image_url');",
              "    }",
              "});"
            ]
          }
        }
      ]
